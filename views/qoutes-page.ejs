}
.coment-container-input{
    width:400px;
    background-color: #ffe4c4;
    color:green;
    border: 0px;
}
.coment-list{
    width:400px;
    background-color: blanchedalmond;
}
.detail-container{
    text-decoration: none;
color:brown;
background-color: rgb(231, 201, 201);
}
  
     .username-value{
        color:brown;
        margin-right:12px;
     }
