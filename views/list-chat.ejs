<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>
    <style>
      .chat-list-bar {
      display: flex;
      align-items: center;
      padding: 10px;
      background-color: #f0f0f0;
    }

    .btn-bar {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      margin-right: 10px;
    }

    /* Style the chat target and user wrappers */
    .chat-target-wrapper, .chat-user-wrapper {
      margin-top: 20px;
    }

    /* Style the list cards */
    .list-user-card {
      border: 1px solid #ddd;
      background-color: rgb(110, 167, 123);
      border-radius: 5px;
      padding: 10px;
      margin-bottom: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .list-person-card{
        border: 1px solid #ddd;
      background-color: rgb(223, 229, 186);
      border-radius: 5px;
      padding: 10px;
      margin-bottom: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    .name {
      font-weight: bold;
    }

    .chat-views {
      text-decoration: none;
      color: black;
    }
    </style>
</head>
<body>
    <div class="chat-list-bar">
        <a href="/first-page/<%=user_id%>" class="btn-bar" style="color:cadetblue"> <%=username%></a>
        <a href="/list-chat-open/<%=user_id%>" class="btn-bar" style="color:rgb(213, 234, 213)">chat masuk</a>    
    </div>
    <div class="chat-target-wrapper">
        <% target_list.forEach(data_sent => { %>
            <div class="list-person-card">
                <p class="name"><%=data_sent.user_name%></p>
                <a href="/open-chat-system/<%=user_id%>/<%=data_sent.user_id%>" class="chat-views"><%=data_sent.chat_value%></a>
            </div>
        <% }) %>
        <div class="chat-user-wrapper">
            <% user_list.forEach(data_get => { %>
                <div class="list-user-card">
                    <p class="name"><%=data_get.target_name%></p>
                    <a href="/open-chat-system/<%=user_id%>/<%=data_get.target_id%>" class="chat-views"><%=data_get.chat_value%></a>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
