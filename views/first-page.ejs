<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        .bar-private-container {
            display: flex;
            justify-content: space-around;
            background-color: #ecb2b2;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

        .btn-bar, .username-style {
            background-color: burlywood;
            color: brown;
            border: none;
            padding: 10px 15px;
            cursor: pointer;
            font-size: 1em;
        }

        .btn-bar {
            background-color: #bb5c40;
            color: white;
        }

        .btn-add {
            background-color: #d6a66f;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 10px;
            cursor: pointer;
            font-size: 1em;
        }

        .body-nav {
            display: flex;
            flex-direction: column;
            padding: 20px;
            height: 480px;
            overflow-y: auto;
        }

        .context-wrapper, .annacoument-wrapper {
            margin-bottom: 20px;
            height: 490px;
            overflow-y: auto;
        }

        .qoutes-card, .annacoument-card-container {
            background-color: #f8f9fa;
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 15px;
        }

        .qoutes-head {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .qoutes-info {
            margin-left: 10px;
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

        .annacoument-title {
            margin: 0;
        }

        .nav-bellow {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa;
            padding: 10px 0;
            display: flex;
            justify-content: center;
            border-top: 1px solid #ddd;
        }

        @media (min-width: 768px) {
            .body-nav {
                flex-direction: row;
            }

            .context-wrapper, .annacoument-wrapper {
                flex: 1;
                margin: 0 10px;
            }

            .bar-private-container {
                justify-content: space-between;
                padding: 10px 20px;
            }

            .btn-bar, .username-style {
                margin: 0 5px;
            }

            .nav-bellow {
                justify-content: space-around;
            }
        }
    </style>
</head>
<body>
    <div class="bar-private-container">
        <a href="/setting/<%=data.account_id%>"><button class="username-style" style="background-color: burlywood;color:brown"><%=data.username%></button></a>
        <a href="/friends/<%=data.account_id%>"><button class="btn-bar">Dikenal</button></a>
        <a href="/friends-list/<%=data.account_id%>"><button class="btn-bar">Kenalan</button></a>
        <a href="/list-chat-open/<%=data.account_id%>"><button class="btn-bar">Barusan</button></a>
        <a href="/beranda/<%=data.account_id%>"><button class="btn-bar">Navigasi</button></a>
    </div>

    <div class="body-nav">
        <div class="context-wrapper">
            <% paragraf.forEach(datas => { %>
                <div class="qoutes-card" style="background-color: <%=datas.bgcolor%>;">
                    <div class="qoutes-head">
                        <b><%=datas.username%></b>
                        <select class="qoutes-info">
                            <option><%=datas.carry.hours%>:<%=datas.carry.minutes%></option>
                            <option><%=datas.carry.location%></option>
                        </select>
                        <a href="/delete-qoutes/<%=datas.qoutes_id%>/<%=data.account_id%>">
                            <button class="btn-delete">Hapus</button>
                        </a>
                    </div>
                    <a href="/get-update-qoutes/<%=datas.qoutes_id%>/<%=data.account_id%>" style="text-decoration: none;">
                        <h1 style="color: <%=datas.color%>"><%=datas.qoutes_value%></h1>
                    </a>
                </div>
            <% }) %>
        </div>
        <div class="annacoument-wrapper">
            <% annacoument_user.forEach(DATA => { %>
                <div class="annacoument-card-container">
                    <h3 class="annacoument-title"><%=DATA.username%></h3>
                    <b><%=DATA.carry.place%></b>
                    <div class="annacoument-body">
                        <h3><%=DATA.annacoument_title%></h3>
                        <span><%=DATA.annacoument_value%></span>
                    </div>
                    <a href="/open-user-annacoument/<%=data.account_id%>/<%=DATA.annacoument_id%>" style="text-decoration: none;">
                        <button style="border:0px; background-color: #d6a66f;color:#ddd" >Buka</button>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="nav-bellow">
        <a href="/input/<%=data.account_id%>"><button class="btn-add">Quotes</button></a>
        <a href="/add-annacoument-page/<%=data.account_id%>"><button class="btn-add">Pengumuman</button></a>
    </div>
</body>
</html>
