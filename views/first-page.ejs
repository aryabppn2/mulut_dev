<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <style>
        .body-nav{
            height: 450px;
            overflow-y: auto;
        }
        .bar-private-container, .bar-bellow {
      display: flex;
      justify-content: space-between;
      padding: 10px;
      background-color: #ca8079;
    }

    .btn-bar {
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      background-color: #efdbdb;
      color: #333;
      cursor: pointer;
    }

    /* Style the username button */
    .username-style {
      background-color:; /* Inherit from parent */
      color: black;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
    }

    /* Style the quotes card */
    .qoutes-card {
      margin-bottom: 15px;
      padding: 15px;
      border-radius: 5px;
    }

    .qoutes-head {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .qoutes-info {
      margin-right: 10px;
      font-size: 0.8rem;
      color: #888;
    }

    .btn-delete {
      background-color: #e04040;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 3px;
      cursor: pointer;
    }

    /* Style the announcement card */
    .annacoument-card-container {
      margin-bottom: 15px;
      padding: 15px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .annacoument-title {
      margin-bottom: 5px;
    }

    .annacoument-body {
      margin-top: 10px;
    }

    .btn-add {
      background-color: #4CAF50; /* Green */
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    </style>
</head>
<body>
  
    <div class="bar-private-container">
        <a href="/setting/<%=data.account_id%>"><button class="username-style" style="background-color: burlywood;color:brown"><%=data.username%></button></a>
        <a href="/friends/<%=data.account_id%>"><button class="btn-bar">Dikenal</button></a>
        <a href="/friends-list/<%=data.account_id%>"><button class="btn-bar">Kenalan</button></a>
    </div>
   
    <div class="body-nav">
        <div class="context-wrapper">
            <div class="add-qoutes-btn">
                <a href="/input/<%=data.account_id%>"><button class="btn-add">Quotes</button></a>
            </div>
            <% paragraf.forEach(datas => { %>
            
                <div class="qoutes-card" style="background-color: <%=datas.bgcolor%>;">
                    <div class="qoutes-head">
                        <b><%=datas.username%></b>
                        <select class="qoutes-info">
                            <option><%=datas.carry.hours%>:<%=datas.carry.minutes%></option>
                            <option><%=datas.carry.location%></option>
                        </select>
                        <a href="/delete-qoutes/<%=datas.qoutes_id%>/<%=data.account_id%>">
                            <button class="btn-delete">Hapus</button>
                        </a>
                    </div>
                    <a href="/get-update-qoutes/<%=datas.qoutes_id%>/<%=data.account_id%>" style="text-decoration: none;">
                        <h1 style="color: <%=datas.color%>"><%=datas.qoutes_value%></h1>
                    </a>
                </div>
            <% }) %>
        </div>
        <div class="annacoument-wrapper">
            <div class="ad-coloum">
                <a href="/add-annacoument-page/<%=data.account_id%>"><button class="btn-add">Berita</button></a>
            </div>
            <% annacoument_user.forEach(DATA => { %>
                <div class="annacoument-card-container">
                    <h3 class="annacoument-title"><%=DATA.username%></h3>
                    <b><%=DATA.carry.place%></b>
                    <div class="annacoument-body">
                        <h3><%=DATA.annacoument_title%></h3>
                        <span><%=DATA.annacoument_value%></span>
                    </div>
                    <a href="/open-user-annacoument/<%=data.account_id%>/<%=DATA.annacoument_id%>" style="text-decoration: none;">
                        <button style="border:0px; background-color: #d6a66f;color:#ddd" >Buka</button>
                    </a>
                </div>
            <% }) %>
        </div>
    </div>
    <div class="bar-bellow">
        <a href="/list-chat-open/<%=data.account_id%>"><button class="btn-bar">Barusan</button></a>
        <a href="/beranda/<%=data.account_id%>"><button class="btn-bar">Navigasi</button></a>
        
    </div>
</body>
</html>
