<body>
    <form action='/search-annacouments/<%=account.account_id%>'  method="post" class="search-wrapper">
        <a href="/first-page/<%=account.account_id%>" style="text-decoration: none;">
           <span class="username-value"><%=account.username%></span>
            </a>
        <input type="text" name="search_annacoument_input" class="input-text-search" placeholder="cari apa" >
        <button class="btn-search-type" type="submit">üîç</button>
    </form>
    <div class="bar-option">
    
    <div class="bar-wrapeer">
        <a href="/annacoument-navigation/<%=account.account_id%>" style="text-decoration: none;">
            <button class="bar-btn" style="color:brown"><-</button>
            </a>
        <a href="/beranda/<%=account.account_id%>" style="text-decoration: none;">
            <button class="bar-btn" style="color:brown">semua</button>
            </a>
            <a href="/qoutes-navigation/<%=account.account_id%>" style='text-decoration: none;'>
            
            <button class="bar-btn" style='color:lightgreeen'>qoutes</button>
        
            </a>
    </div>
    
    
    </div>
    
    <div class="annacoument-wrapper">
        <% annacouments.forEach(DATA => { %>
            <div class="annacoument-card-container">
            <h3 class="annacoument-title"><%=DATA.username%></h3>
            <b><%=DATA.carry.place%></b>
            <fieldset class="annacoument-body">
                <h3><%=DATA.annacoument_title%></h3>
                <span><%=DATA.annacoument_value%></span>
            </fieldset>
               <a href="/open-annacoument/<%=account.account_id%>/<%=DATA.annacoument_id%>" style="text-decoration: none;">
              <span >buka</span>
            </a>
        
        
            </div>
        
        
        
        <% }) %>
    
    
    </div>
    
</body>