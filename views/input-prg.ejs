<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>buat qoutes</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      background-color: #f5f5f5;
    }

    .input-qoutes-wrapper {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px;
      background-color: #fff;
      border-bottom: 1px solid #ddd;
    }

    .btn-name, .btn-bar {
      background-color: #cf751b;
      color: white;
      border: none;
      padding: 10px 20px;
      margin: 5px;
      cursor: pointer;
      border-radius: 5px;
      font-size: 1em;
      text-decoration: none;
    }

    .clock {
      font-size: 1.5em;
      color: #333;
    }

    .input-style {
      margin: 20px;
    }

    table {
      width: 100%;
      max-width: 400px;
      margin: auto;
      border-collapse: collapse;
    }

    th, td {
      padding: 10px;
      text-align: left;
    }

    .input-color {
      width: 100%;
      padding: 5px;
    }

    .input-qoutes {
      width: 100%;
      max-width: 600px;
      height: 150px;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
      margin-top: 20px;
      font-size: 1em;
      resize: vertical;
    }

    .submid-btn {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 10px 20px;
      cursor: pointer;
      border-radius: 5px;
      font-size: 1em;
      margin-top: 20px;
    }

    @media (max-width: 768px) {
      .input-qoutes-wrapper {
        flex-direction: column;
        align-items: flex-start;
      }

      .btn-name, .btn-bar, .input-qoutes, .submid-btn {
        width: 100%;
        margin: 5px 0;
      }

      .input-style {
        margin: 10px;
      }

      table {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <div class="input-qoutes-wrapper">
    <a href="/first-page/<%= data.account_id %>" class="btn-name"><%= data.username %></a>
    <a href="/add-annacoument-page/<%= data.account_id %>" class="btn-bar">pengumuman</a>

    <span class="clock">
      <b class="hours-time"><%= hours %></b>:<b class="minutes-time"><%= minutes %></b>
    </span>
  </div>
  <div style="text-align: center;">
    <div class="input-style">
      <table>
        <tr>
          <th>tulisan</th>
          <td><input type="color" id="input-sign-color" class="input-color" onchange="updateColor('input-sign-color', 'sign', 'qoutes', 'color')"></td>
        </tr>
        <tr>
          <td>latar belakang</td>
          <td><input type="color" id="input-background-color" class="input-color" onchange="updateColor('input-background-color', 'background', 'qoutes', 'backgroundColor')"></td>
        </tr>
      </table>
    </div>
    <form action="/post-qoutes" method="post">
      <input type="hidden" value="" name="input_signColor" id="sign">
      <input type="hidden" name="input_background" value="" id="background">
      <input type="hidden" name="input_username" value="<%= data.username %>">
      <input type="hidden" name="input_userId" value="<%= data.account_id %>">
      <input type="hidden" name="input_hours" value="<%= hours %>">
      <input type="hidden" name="input_minutes" value="<%= minutes %>">
      <input type="hidden" name="input_location" value="<%= data.location %>">
      <textarea name="input_qoutes" placeholder="isi qoutes" class="input-qoutes" id="qoutes"></textarea><br>
      <button class="submid-btn" type="submit">post</button>
    </form>
  </div>
  <script>
    function updateColor(inputId, hiddenInputId, elementId, styleProperty) {
      const color = document.getElementById(inputId).value;
      const hiddenInput = document.getElementById(hiddenInputId);
      const element = document.getElementById(elementId);
      
      hiddenInput.value = color;
      element.style[styleProperty] = color;
    }
  </script>
</body>
</html>
